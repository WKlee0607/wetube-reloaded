extends base.pug

block content 
    div#videoContainer(data-videoid=video._id)
        if video.fileUrl.split("/")[0] === "uploads"
            video(src="/" + video.fileUrl, crossorigin)
        else 
            video(src=video.fileUrl, crossorigin)
        div#videoControls.videoControls
            div.progressBar
                div.progress
            div.videoControls__bottom
                div.videoControls__play
                    span#play.videoControls__playBtn
                        i.fas.fa-play 
                    div.videoControls__time
                        span#currenTime 00:00
                        span  / 
                        span#totalTime 00:00
                div.videoControls__right
                    div.videoControls__volume
                        input(type="range",step="0.1",value=0.5 ,min="0", max="1")#volume
                        span#mute 
                            i.fas.fa-volume-up 
                    div.fullScreen
                        span#fullScreen
                            i.fas.fa-expand
    if loggedIn
        div.top__box
            div.top__box-hashtags=String(video.hashtags).replace(/,/g," ")
            div.top__box-title=video.title
        div.middle__box
            div.like Like
                if video.meta.likes.find((id) => id !== String(loggedInUser._id))
                    i.fas.fa-thumbs-up 
                else 
                    i.far.fa-thumbs-up
                span.likeNum=video.meta.likes.length
            div.share__box
                div.share Share 
                    i.fas.fa-share
        hr.middle__hr
        div.owner
        hr.middle__hr
        div.video__add-comments
            form.video__comment-form#commentForm
                textarea(cols="30", rows="10", placeholder="Write a nice comment..")
                button Add Comment
            if String(video.owner._id) === String(loggedInUser._id)
                div.video__delete
                    a(href=`/videos/${video._id}/delete`) Delete Video
    else 
        span Like
            i.far.fa-thumbs-up
            span=video.meta.likes.length
    div.video__comments
        ul 
            each comment in video.comments.reverse()
               li.video__comment(data-id=comment._id)
                    i.fas.fa-comment
                    span #{comment.text}
                    if (String(loggedInUser._id) === String(comment.owner))
                        span.removeBtn  ❌
                        span.editBtn  ✏️
    
                    
//-
    div
        p=video.description
        small=video.createdAt
    div 
        small Uploaded By 
            a(href=`/users/${video.owner._id}`)=video.owner.name
    if String(video.owner._id) === String(loggedInUser._id)
        a(href=`${video.id}/edit`) Edit Video &rarr;
        br
        a(href=`${video.id}/delete`) Delete Video &rarr;

block scripts 
    script(src="/assets/js/videoPlayer.js")
    if loggedIn 
        script(src="/assets/js/commentSection.js")
        script(src="/assets/js/likeSection.js")